@page
@model MediscreenUI.Pages.Notes.IndexModel
@{
    ViewData["Title"] = "Notes List";
}

<a asp-page="./Create" class="btn btn-success">New Note</a>
<br />

<h1>Notes List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Patient</th>
            <th>Practitioner's note/recommendations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var note in Model.Notes)
        {
            <tr>
                <td>@note.PatientId</td>
                <td>@note.NoteContent</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@note.Id" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

