@page
@model MediscreenUI.Pages.Patients.EditModel
@{
    ViewData["Title"] = "Edit Patient";
}

<h1>Edit patient</h1>

<form method="post">
    <input type="hidden" asp-for="Patient.Id" />
    <div class="form-group">
        <label asp-for="Patient.FirstName"></label>
        <input asp-for="Patient.FirstName" class="form-control" />
        <span asp-validation-for="Patient.FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Patient.LastName"></label>
        <input asp-for="Patient.LastName" class="form-control" />
        <span asp-validation-for="Patient.LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Patient.DateOfBirth"></label>
        <input asp-for="Patient.DateOfBirth" class="form-control" />
        <span asp-validation-for="Patient.DateOfBirth"></span>
    </div>
    <div class="form-group">
        <label asp-for="Patient.Sex"></label>
        <select asp-for="Patient.Sex" class="form-control" required>
            <option value="">--Please select the sex--</option>
            <option value="M">M</option>
            <option value="F">F</option>
        </select>
        <span asp-validation-for="Patient.Sex"></span>
    </div>
    <div class="form-group">
        <label asp-for="Patient.HomeAdress"></label>
        <input asp-for="Patient.HomeAdress" class="form-control" />
        <span asp-validation-for="Patient.HomeAdress"></span>
    </div>
    <div class="form-group">
        <label asp-for="Patient.PhoneNumber"></label>
        <input asp-for="Patient.PhoneNumber" class="form-control" />
        <span asp-validation-for="Patient.PhoneNumber"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="./Index" class="btn btn-danger">Cancel</a>
</form>
